
{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "allowJs": false,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "removeComments": false,
    "moduleResolution": "node",
    "declaration": true,
    "lib": [
      "esnext"
    ],
    "rootDir": ".",
    "paths": {
      "@lothric/compiler": ["packages/compiler/lib"],
      "@lothric/core": ["packages/core/lib"]
    }
  },
  "include": [
    // "packages/declarations.d.ts",
    "packages/*/lib",
    "packages/*/__tests__"
  ]
}
