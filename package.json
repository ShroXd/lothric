{
  "name": "lothric",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "yarn lint && jest --config jest.config.js --coverage --verbose -u",
    "build": "yarn lint && node ./scripts/build.js",
    "prepublishOnly": "yarn build",
    "lint": "tslint -p tsconfig.json",
    "commit": "git-cz",
    "changelog": "conventional-changelog -i CHANGELOG.md -s"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "chalk": "^4.1.0",
    "conventional-changelog-cli": "^2.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "dts-bundle": "^0.7.3",
    "execa": "^4.1.0",
    "fs-extra": "^9.0.1",
    "husky": "^4.3.0",
    "is-builtin-module": "^3.0.0",
    "jest": "^26.5.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.2",
    "markdown-toc": "^1.2.0",
    "prettier": "^2.1.2",
    "rollup": "^2.32.0",
    "rollup-plugin-typescript2": "^0.28.0",
    "ts-jest": "^26.4.1",
    "tslint": "^6.1.3",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.0.3"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
